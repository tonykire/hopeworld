#include <iostream>
using namespace std;

int strange_sum (int n, int m[]) {
    int mid = n/2;
    int sum = 0;
    if (mid != 0) {
        sum = strange_sum(mid, &(m[0])) + strange_sum(n-mid, &(m[mid]));
    }
    else {
        sum = m[mid];
    }
    return sum;
}

int main ()
{
	int n;
	cin >> n;
	int m[n];
    for (int i = 0; i < n; i++) {
        cin >> m[i];
    }

    cout << strange_sum(n, m);

	return 0;
}
